{
  "name": "pantry-list-frontend",
  "description": "A Vue-based UI for the Pantry List app.",
  "version": "1.0.0",
  "author": "Adam Macumber <adam.macumber@sharpnotions.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "format": "./node_modules/.bin/prettier --write 'src/**/*.@(js|vue)'",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/jest",
    "test-watch": "cross-env NODE_ENV=test ./node_modules/.bin/jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit":
        "./node_modules/.bin/pretty-quick --staged 'src/**/*.@(js|vue)'"
    }
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.1.12",
    "apollo-client": "^2.2.8",
    "apollo-link": "^1.2.1",
    "apollo-link-context": "^1.0.7",
    "apollo-link-http": "^1.5.3",
    "deepmerge": "^2.2.1",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.8.0",
    "js-cookie": "^2.2.0",
    "logrocket": "^0.6.16",
    "logrocket-vuex": "0.0.3",
    "vue": "^2.5.11",
    "vue-apollo": "^3.0.0-beta.5",
    "vue-router": "^3.0.1",
    "vuedraggable": "^2.16.0",
    "vuetify": "^1.1.4",
    "vuex": "^3.0.1"
  },
  "browserslist": ["> 1%", "last 2 versions", "not ie <= 8"],
  "jest": {
    "roots": ["src", "test"],
    "testURL": "http://localhost/",
    "moduleDirectories": ["node_modules"],
    "moduleNameMapper": {
      "^@/(.*)": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": ["js", "json", "vue"],
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*\\.(vue)$": "vue-jest",
      ".*": "babel-jest"
    },
    "setupFiles": ["<rootDir>/test/setup-jest"]
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.12",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^4.3.0",
    "file-loader": "^1.1.4",
    "hoek": "^5.0.3",
    "husky": "^0.15.0-rc.13",
    "jest": "^22.4.3",
    "jest-transform-graphql": "^2.1.0",
    "merge": "^1.2.1",
    "node-sass": "^4.5.3",
    "prettier": "1.11.1",
    "pretty-quick": "^1.4.1",
    "sass-loader": "^6.0.6",
    "vue-jest": "^2.1.1",
    "vue-loader": "^13.0.5",
    "vue-server-renderer": "^2.5.16",
    "vue-template-compiler": "^2.4.4",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=7.2.0"
  }
}
